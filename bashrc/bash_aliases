alias off="xset dpms force standby"

function pd(){
    if [ $# -gt 0 ];then
        PROMPT_DIRTRIM=$1
    elif [ -z $PROMPT_DIRTRIM ];then
        PROMPT_DIRTRIM=3
    else
        PROMPT_DIRTRIM=""
    fi
}

function u(){
  tmplast=$OLDPWD
  n=$1
  cd `eval printf ../"%.s" {1.."${n}"}`
  if [ $# -eq 0 ];then
    OLDPWD=$tmplast
  else
    echo "$OLDPWD -> $PWD"
  fi
}

alias setdate='sudo date --set @"$(wget -q https://ntp-a1.nict.go.jp/cgi-bin/jst -O - | sed -n 4p | cut -d. -f1)"'

function vimgitshow(){
    git show "$1" | vim -M -c 'set nomod' -c "file ${1##*/}" -c 'filetype detect' -
}

alias gpuoff='export CUDA_VISIBLE_DIVICES=""'
alias gpuon='unset CUDA_VISIBLE_DIVICES'

function cmk(){
		cpath=$(pwd)
		cd ~/ros_catkin_ws
		catkin_make
		cd $cpath
}
function rossource(){
		cpath=$(pwd)
		cd ~/ros_catkin_ws
		source devel/setup.bash
		cd $cpath
}

